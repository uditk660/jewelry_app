<style>
  /* Scoped styles for Metals new form */
  .form-wrap{max-width:720px;margin:22px auto}
  .form-card{background:#fff;padding:20px;border-radius:10px;box-shadow:0 10px 30px rgba(16,24,40,0.06)}
  .form-header{display:flex;align-items:center;justify-content:space-between;margin-bottom:12px}
  .form-title{font-size:18px;font-weight:700;color:#0f172a}
  .form-row{display:flex;gap:12px;flex-wrap:wrap;margin-bottom:12px}
  .form-col{flex:1;min-width:200px}
  label{display:block;margin-bottom:6px;color:#0f172a}
  input[type=text]{width:100%;padding:10px 12px;border-radius:8px;border:1px solid #e6eef6;background:#fbfdff}
  .form-actions{display:flex;gap:10px;justify-content:flex-end;margin-top:12px}
  .btn{padding:8px 12px;border-radius:8px;border:1px solid #e6eef6;background:#f8fafc;color:#0f172a}
  .btn-primary{background:linear-gradient(90deg,#003f8f,#b30000);color:#fff;border:none}
</style>

<div class="form-wrap">
  <div class="form-card">
    <div class="form-header">
      <div>
        <div class="form-title">Create New Metal</div>
        <div class="muted">Add a metal and its base unit used for pricing and stocks</div>
      </div>
      <div>
        <%= link_to 'Back', metals_path, class: 'btn' %>
      </div>
    </div>

    <%= form_for @metal, url: metals_path do |f| %>
      <div class="form-row">
        <div class="form-col">
          <%= f.label :name %>
          <%= f.text_field :name, placeholder: 'e.g., Gold' %>
        </div>
        <div class="form-col">
          <%= f.label :base_unit %>
          <%= f.text_field :base_unit, placeholder: 'e.g., g (grams)' %>
        </div>
      </div>

      <div class="form-row" style="align-items:center">
        <div class="checkbox-inline" style="display:flex;align-items:center;gap:8px">
          <%= f.label :active, 'Active' %>
          <%= f.check_box :active, style: 'margin:0' %>
        </div>
      </div>

      <div class="form-actions">
        <%= link_to 'Cancel', metals_path, class: 'btn' %>
        <%= f.submit 'Create Metal', class: 'btn' %>
      </div>
    <% end %>
  </div>
</div>

