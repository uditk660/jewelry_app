<style>
  /* Scoped styles for Metals index */
  .metals-wrap{max-width:1100px;margin:18px auto;padding:18px}
  .metals-card{background:#fff;border-radius:10px;padding:18px;box-shadow:0 8px 24px rgba(16,24,40,0.06)}
  .metals-header{display:flex;align-items:center;justify-content:space-between;margin-bottom:12px}
  .metals-title{font-size:20px;font-weight:700;color:#0f172a}
  .metals-actions{display:flex;gap:8px}
  .btn{padding:8px 12px;border-radius:8px;border:1px solid #e6eef6;background:#f8fafc;color:#0f172a;cursor:pointer}
  .btn-primary{background:linear-gradient(90deg,#003f8f,#b30000);color:#fff;border:none}
  .metals-table{width:100%;border-collapse:collapse;margin-top:8px}
  .metals-table th,.metals-table td{padding:10px 12px;border-bottom:1px solid #f1f5f9;text-align:left}
  .muted{color:#64748b;font-size:13px}
  @media (max-width:720px){.metals-table td:nth-child(3),.metals-table th:nth-child(3){display:none}}
</style>

<div class="metals-wrap">
  <div class="metals-card">
    <div class="metals-header">
      <div>
        <div class="metals-title">Metals</div>
        <div class="muted">Manage metals and their base units</div>
      </div>

      <div class="metals-actions">
        <%= form_tag metals_path, method: :get, style: 'display:flex; gap:8px; align-items:center' do %>
          <%= text_field_tag :q, params[:q], placeholder: 'Search metals', style: 'padding:8px 10px;border-radius:8px;border:1px solid #e6eef6' %>
          <%= submit_tag 'Search', class: 'btn' %>
        <% end %>
        <%= link_to 'New Metal', new_metal_path, class: 'btn btn-primary' %>
      </div>
    </div>

    <table class="metals-table">
      <thead>
        <tr>
          <th style="width:48px">#</th>
          <th>Name</th>
          <th>Base Unit</th>
          <th style="width:160px">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @metals.each_with_index do |m, idx| %>
          <tr>
            <td><%= idx + 1 %></td>
            <td><strong><%= m.name %></strong><div class="muted" style="margin-top:4px">Created <%= m.created_at.strftime('%d %b %Y') if m.created_at %></div></td>
            <td><%= m.base_unit %></td>
            <td>
              <%= link_to 'View', metal_path(m), class: 'btn' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
