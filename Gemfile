source 'https://rubygems.org'

ruby '2.7.8'

# Rails 5 compatible set
gem 'rails', '~> 5.0.7'

# DB
gem 'mysql2', '>= 0.5.3'

# Asset pipeline
gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'

# Use ActiveModel has_secure_password
gem 'bcrypt', '~> 3.1.7'
gem 'jbuilder', '~> 2.5'

# Use Puma as the app server
gem 'puma', '~> 3.7'

# Use CoffeeScript for .coffee assets and views
gem 'coffee-rails', '~> 4.2'

# Turbolinks
gem 'turbolinks', '~> 5'
gem 'jquery-rails'

# QR code generation for invoices
gem 'rqrcode'

# Authentication
gem 'devise', '~> 4.8'

# See https://github.com/rails/rails/issues/31299 for Rails 5+ security

group :development, :test do
  gem 'byebug'
end

group :development do
  gem 'listen', '~> 3.0.5'
  gem 'spring'
  gem 'spring-watcher-listen', '~> 2.0.0'
end

group :test do
  gem 'minitest'
end
